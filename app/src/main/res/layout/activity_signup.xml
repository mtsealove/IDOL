<?xml version="1.0" encoding="utf-8"?>
<!--회원가입 페이지-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/list_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:text="회원가입"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="27sp"/>

    <!--화면 길이가 부족할 수도 있기 때문에 스크롤 적용-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="이름 입력"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/etbackground"
                android:hint="이름"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="생년월일 입력"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/input_birth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/etbackground"
                android:hint="ex)960927"
                android:inputType="date"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="전화번호 입력"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/input_phone_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/etbackground"
                android:hint="ex)01012345678"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ID 입력"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_ID"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/etbackground"
                    android:hint="ID"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/check_overlap"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="-80dp"
                    android:text="중복확인"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:onClick="check_ID_overlap"
                    android:layout_marginTop="10dp"
                    android:background="#FA0303"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="비밀번호 입력"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/input_passwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/etbackground"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="비밀번호 확인"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/check_passwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/etbackground"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:text="회원가입"
                android:onClick="Sign_up"
                android:background="@color/colorPrimary"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
