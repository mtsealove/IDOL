<?xml version="1.0" encoding="utf-8"?>
<!--메인 메뉴를 표시할 레이아웃-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:id="@+id/main_layout">

    <!--메인 레이아웃-->
    <LinearLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--로고 출력 레이아웃-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/list_background">

            <LinearLayout
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/slide_menu"
                android:layout_width="53dp"
                android:layout_height="56dp"
                app:srcCompat="@drawable/slidemenu"
                />

            <ImageView
                android:id="@+id/register"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sign_up"
                android:layout_toRightOf="@id/logo"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--전체 레이아웃-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--출발/도착위치 선택 레이아웃-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/list_background"
                    android:id="@+id/set_st_ed">
                <!--출발지-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="배송 경로 설정하기"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:background="#FFCC00"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"/>


                    <TextView
                        android:id="@+id/start_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="출발지 검색"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:background="@drawable/background"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:text="이름"
                        android:inputType="textPersonName"
                        android:layout_marginRight="43dp"
                        android:textColor="#000000"/>

                    <EditText
                        android:id="@+id/sendname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/etbackground"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:text="연락처"
                        android:layout_marginRight="20dp"
                        android:textColor="#000000"/>

                    <EditText
                        android:id="@+id/sendphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/etbackground"
                        android:inputType="phone"
                        android:textSize="25sp" />
                </LinearLayout>

                <!--도착지-->
                <TextView
                    android:id="@+id/destination_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="도착지 검색"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:background="@drawable/background"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:onClick="move_mapd"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:text="이름"
                        android:inputType="textPersonName"
                        android:layout_marginRight="43dp"
                        android:textColor="#000000"/>

                    <EditText
                        android:id="@+id/receivename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/etbackground"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:text="연락처"
                        android:layout_marginRight="20dp"
                        android:textColor="#000000"/>

                    <EditText
                        android:id="@+id/recievephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/etbackground"
                        android:inputType="phone"
                        android:textSize="25sp" />
                </LinearLayout>
                </LinearLayout>

                <!--편도/왕복 선택-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/commonbackgroud"
                    android:onClick="set_round_trip">

                    <TextView
                        android:id="@+id/setreturn"
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="편도/왕복 설정"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/move" />
                </RelativeLayout>


                <!--운송수단 설정-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="운송수단 설정하기"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:background="#FFCC00"
                    android:gravity="center"
                    android:layout_margin="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/commonbackgroud"
                    android:onClick="set_size">

                    <TextView
                        android:id="@+id/weight_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="화물 종류 입력"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/move" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/commonbackgroud"
                    android:onClick="set_transportation">

                    <TextView
                        android:id="@+id/transporation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="차량 종류"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/move" />
                </RelativeLayout>

                <!--결제 수단 선택-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/commonbackgroud"
                    android:onClick="set_purchase_method">

                    <TextView
                        android:id="@+id/purchase_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="결제수단"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/move" />
                </RelativeLayout>

                <!--전할 메세지 입력-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="set_message">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="메세지 입력"
                        android:textColor="#000000"
                        android:textSize="25sp" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/move" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/final_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/etbackground"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="배송"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:visibility="gone"/>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="신청하기"
                    android:textSize="25sp"
                    android:background="#FFCC00"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="request"/>

           </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!--서브 메뉴 출력 레이아웃-->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/slidemenu_layout"
        android:layout_gravity="start"
        android:clickable="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                //로고
                <LinearLayout
                    android:id="@+id/egg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/list_background"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/app_name"
                        android:textSize="35sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="40dp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="로그인 하세요"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/commonbackgroud"/>

                <TextView
                    android:id="@+id/notice"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="공지사항"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/commonbackgroud"
                    android:onClick="notice_board"/>

                <TextView
                    android:id="@+id/FAQ"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="FAQ"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/commonbackgroud"
                    android:onClick="faq"/>

                <TextView
                    android:id="@+id/bill_list"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="요금표 확인"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/commonbackgroud"
                    android:onClick="show_bill_list"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
